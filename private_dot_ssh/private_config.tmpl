{{- $is_windows := eq .chezmoi.os "windows" -}}
{{- if $is_windows }}
XAuthLocation "C:/Program Files/VcXsrv/xauth.exe"
{{- end }}

Host DreSRV
    HostName {{ .dresrv.local_ip }}

Host dresrv.com
{{- if .dresrv.use_domain }}
    HostName {{ .dresrv.domain }}
    Port {{ .dresrv.ssh_port }}
{{- else }}
    HostName {{ .dresrv.local_ip }}
{{- end }}

Host github.com-pub
    HostName github.com
    User git
    IdentityFile {{ if eq .chezmoi.username "root" }}/home/andrei{{ else }}~{{ end }}/.ssh/cosandr_ed25519

Host srvsim
    HostName 192.168.122.6
    User root
{{- if ne .chezmoi.hostname "DreSRV" }}
    ProxyJump DreSRV
{{- end }}

Host srvsim-boot
    HostName 192.168.122.6
    Port 2222
    User root
{{- if ne .chezmoi.hostname "DreSRV" }}
    ProxyJump DreSRV
{{- end }}

Host romsto
    HostName {{ .romsto.domain }}
    Port {{ .romsto.ssh_port }}
{{ if ne .chezmoi.hostname "DreSRV" }}
Host DreSRV-X
    HostName DreSRV
    ForwardX11 yes
{{- if $is_windows }}
    ForwardX11Trusted yes
    RequestTTY yes
    RemoteCommand export GDK_SCALE=2; export QT_SCREEN_SCALE_FACTORS=2; export QT_AUTO_SCREEN_SCALE_FACTOR=0; export GDK_DPI_SCALE=0.75; zsh
{{- end }}
{{- end }}
