env:
  TERM: xterm-256color

window:
  decorations: {{ if or .is.windows .is.mac (not (eq .sess "i3" "sway")) }}full{{ else }}none{{ end }}
  dynamic_title: true
  opacity: 1.0

scrolling:
  history: 50000
  multiplier: 3

hints:
  enabled:
    - regex: "(ipfs:|ipns:|magnet:|mailto:|gemini:|gopher:|https:|http:|news:|file:|git:|ssh:|ftp:)\
              [^\u0000-\u001F\u007F-\u009F<>\"\\s{-}\\^⟨⟩`]+"
      command: {{ if .is.windows }}explorer{{ else if .is.mac }}open{{ else }}xdg-open{{ end }}
      post_processing: true
      mouse:
        enabled: true
        mods: Control

font:
  normal:
    family: Fira Code
    style: Regular

  bold:
    family: Fira Code
    style: Bold

  italic:
    family: Fira Code
    style: Italic

  bold_italic:
    family: Fira Code
    style: Bold Italic

  size: {{ .font_size }}

# KDE Breeze (Ported from Konsole)
