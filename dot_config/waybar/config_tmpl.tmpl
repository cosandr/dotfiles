        ],
        "modules-center": [
            "sway/window"
        ],
        "modules-right": [
            "cpu",
            "temperature",
            "custom/sep",
            "memory",
            "custom/sep",
            "custom/updates",
            "custom/sep",
            "pulseaudio",
            "custom/switchaudio",
            "custom/sep",
            "custom/monitor_brightness",
            "custom/sep",
            "clock"
