[
    {
        "layer": "top",
        "position": "bottom",
        "height": 30,
        "output": [$OUTPUTS_LAPTOP],
        "modules-left": [
            "sway/workspaces",
            "sway/mode"
        ],
        "modules-center": [
            "sway/window"
        ],
        "modules-right": [
            "cpu",
            "temperature",
            "custom/sep",
            "memory",
            "custom/sep",
            "pulseaudio",
            "custom/sep",
            "network#wifi",
            "custom/sep",
            "backlight",
            "custom/sep",
            "clock",
            "custom/sep",
            "battery",
            "custom/sep",
            "custom/keyboard-layout",
            "custom/sep",
            "custom/scratchpad-indicator",
            "tray"
        ],
{{ template "waybar_modules" }}
    },
    {
        "layer": "top",
        "position": "bottom",
