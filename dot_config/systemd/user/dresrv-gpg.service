[Unit]
Description=DreSRV GPG Forwarding
After=dresrv-online.target
BindsTo=dresrv-online.target

[Service]
Restart=always
RestartSec=5
# Ensure directories are setup
ExecStartPre=-ssh dresrv 'gpg -K &>/dev/null'
ExecStart=ssh dresrv-gpg 'while true; do sleep 5; done'

[Install]
WantedBy=dresrv-online.target
