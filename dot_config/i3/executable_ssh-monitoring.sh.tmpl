#!/bin/bash

# Wait for SSH agent
while [[ -z $SSH_AUTH_SOCK ]]; do sleep 1; done

# Start terminal
{{- if .dresrv.use_domain }}
kitty --title server-monitoring ssh -t andrei@dresrv.com 'tmuxinator start hjd --suppress-tmux-version-warning=SUPPRESS-TMUX-VERSION-WARNING' &
{{- else }}
kitty --title server-monitoring ssh -t root@DreSRV 'tmuxinator start hjd --suppress-tmux-version-warning=SUPPRESS-TMUX-VERSION-WARNING' &
{{- end}}
