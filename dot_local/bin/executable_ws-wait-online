#!/bin/bash

set -euo pipefail

is_online() {
    ping -q -c 1 -W 1 192.168.1.43 > /dev/null
}

# Make sure we stop target when exiting, if needed
trap 'is_online || systemctl --user stop ws-online.target' EXIT

run() {
    # Wait for ping
    while ! is_online; do sleep 1; done

    echo "ws is online"
    systemctl --user start ws-online.target

    # Wait for offline
    while is_online; do sleep 1; done
    echo "ws is offline"
}

while true; do run; done
